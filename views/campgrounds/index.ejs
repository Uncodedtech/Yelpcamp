<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px"></div>
<br><br>

    <h3 > All Campgrounds are listed below!!</h3> 
<br><br>

    <% for( let campground of campgrounds ) { %>


        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(campground.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://image.shutterstock.com/image-vector/no-image-available-vector-illustration-260nw-744886198.jpg">
                            <% } %>
                </div>
                <div class="col-md-8 ">
                    <div class="card-body ">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <%= campground.location %>
                        </h6>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Take a closer
                            look</a>

                    </div>
                </div>
            </div>
        </div>



        <% } %>
<br><br>



           

         

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}

            </script>

            <script src="/javascript/clustermap.js"></script>